conteúdo: "<!DOCTYPE html>
<html lang=\"en\">
<head>
    <meta charset=\"UTF-8\">
    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">
    <title>Botão Transparente</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
        }
        #myButton {
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            transition: opacity 0.3s ease-in-out; /* Adiciona uma transição suave para a opacidade */
            opacity: 1; /* Estado inicial: totalmente opaco */
        }
    </style>
</head>
<body>

    <button id=\"myButton\">Clique em mim</button>

    <script>
        const button = document.getElementById('myButton');

        button.addEventListener('click', function() {
            // Verifica a opacidade atual do botão
            if (button.style.opacity === '1') {
                button.style.opacity = '0.3'; // Torna semi-transparente
            } else {
                button.style.opacity = '1'; // Torna totalmente opaco
            }
        });
    </script>

</body>
</html>"